<includes>
  <include name="CommonMediaPlayingBackground">
    <control type="image">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>special://skin/backgrounds/media-overlay.png</texture>
      <visible>Player.HasVideo + !Skin.HasSetting(ShowBackgroundVideo)</visible>
